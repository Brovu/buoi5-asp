@model DataBase_Nhom2.Models.PhongBan

@{
    ViewBag.Title = "Sửa phòng ban";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Sửa thông tin phòng ban</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">

    <div class="form-group">
        <label class="control-label">Mã Phòng Ban</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.maPhong, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.maPhong, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label">Tên phòng ban mới</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.tenPhong, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.tenPhong, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Cập nhật" class="btn btn-info mt-2" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Trở lại", "Index")
</div>

@section Scripts {
   @* @Scripts.Render("~/bundles/jqueryval")*@
}
